{
  "name": "that-api-sessions",
  "version": "1.0.0",
  "description": "THAT Conference's Sessions Micro Service.",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files --ignore ./**/__tests__,./**/__mocks__",
    "postbuild": "cp .env package* __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && functions-framework --target=handler --port=8003 --verbose",
    "start:watch": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "start": "functions-framework --target=handler",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build"
  },
  "dependencies": {
    "@apollo/federation": "^0.20.6",
    "@google-cloud/firestore": "^4.7.1",
    "@google-cloud/functions-framework": "^1.7.1",
    "@sentry/node": "^5.27.6",
    "@thatconference/api": "^1.15.1",
    "apollo-server": "^2.19.0",
    "apollo-server-express": "^2.19.0",
    "base32-encode": "^1.1.1",
    "dataloader": "^2.0.0",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.1.0",
    "googleapis": "^62.0.0",
    "graphql": "^15.4.0",
    "graphql-scalars": "^1.5.0",
    "graphql-type-json": "^0.3.2",
    "ical-generator": "^1.15.2",
    "lodash": "^4.17.20",
    "merge-graphql-schemas": "^1.7.8",
    "moment": "^2.29.1",
    "node-fetch": "^2.6.1",
    "postmark": "^2.6.0",
    "response-time": "^2.3.2",
    "slugify": "^1.4.6",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "@babel/register": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest-cli": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatConference/that-api-sessions"
  },
  "license": "GPL-3.0"
}
